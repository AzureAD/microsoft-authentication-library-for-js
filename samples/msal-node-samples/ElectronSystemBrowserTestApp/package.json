{
    "name": "electronsystembrowsertestapp",
    "productName": "electronsystembrowsertestapp",
    "version": "1.0.0",
    "description": "A sample Electron application that uses msal-node to acquire tokens using system browser",
    "main": ".webpack/main",
    "scripts": {
        "build": "tsc",
        "start": "electron-forge start",
        "package": "electron-forge package",
        "build:package": "cd ../../.. && npm run build:all --workspace=lib/msal-node",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "eslint --ext .ts,.tsx .",
        "pretest": "npm run package",
        "test:e2e": "npx playwright test"
    },
    "keywords": [
        "msal-node",
        "electron",
        "javascript"
    ],
    "license": "MIT",
    "devDependencies": {
        "@electron-forge/cli": "^6.0.4",
        "@electron-forge/maker-deb": "^6.0.4",
        "@electron-forge/maker-rpm": "^6.0.4",
        "@electron-forge/maker-squirrel": "^6.0.4",
        "@electron-forge/maker-zip": "^6.0.4",
        "@electron-forge/plugin-webpack": "^6.0.4",
        "@electron/asar": "^3.2.3",
        "@playwright/test": "^1.31.1",
        "@types/jest": "^29.5.0",
        "@types/react": "^18.0.28",
        "@types/react-dom": "^18.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "@vercel/webpack-asset-relocator-loader": "1.7.3",
        "autoprefixer": "^10.4.13",
        "css-loader": "^6.0.0",
        "e2e-test-utils": "^0.0.1",
        "electron": "22.3.25",
        "eslint": "^8.0.1",
        "eslint-plugin-import": "^2.25.0",
        "fork-ts-checker-webpack-plugin": "^7.2.1",
        "jest": "^29.5.0",
        "node-loader": "^2.0.0",
        "postcss": "^8.4.31",
        "postcss-loader": "^4.2.0",
        "sass": "^1.55.0",
        "sass-loader": "^10.1.1",
        "style-loader": "^3.0.0",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.2.2",
        "ts-node": "^10.0.0",
        "typescript": "~4.5.4"
    },
    "dependencies": {
        "@azure/msal-node": "^2.1.0",
        "axios": "^1.7.4",
        "bootstrap": "^5.2.3",
        "electron-squirrel-startup": "^1.0.0",
        "react": "^18.2.0",
        "react-bootstrap": "^2.7.2",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.9.0"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "asar": true
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "electron-react-test-app"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ],
            "plugins": [
                {
                    "name": "@electron-forge/plugin-webpack",
                    "config": {
                        "mainConfig": "./webpack.main.config.js",
                        "renderer": {
                            "config": "./webpack.renderer.config.js",
                            "entryPoints": [
                                {
                                    "html": "./src/index.html",
                                    "js": "./src/renderer.ts",
                                    "name": "main_window",
                                    "preload": {
                                        "js": "./src/preload.ts"
                                    }
                                }
                            ]
                        }
                    }
                }
            ]
        }
    }
}
