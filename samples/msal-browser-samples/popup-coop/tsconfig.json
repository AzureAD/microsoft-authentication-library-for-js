{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es2015",
            "dom",
            "es2015.promise"
        ],
        "allowUnusedLabels": false,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "./app/**/test/*.spec.ts",
        "./app/testUtils.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}